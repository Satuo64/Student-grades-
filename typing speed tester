#include <iostream>
#include <ctime>
#include <cstdlib>

using namespace std;

string words[] = {
    "apple", "banana", "cherry", "grape", "lemon",
    "melon", "peach", "berry", "kiwi", "mango"
};

int main() {
    srand(time(0));
    int total = 0, correct = 0;
    time_t startTime = time(0);

    cout << "Typing Speed Test (You have 30 seconds)\n";
    cout << "Type the word and press Enter\n\n";

    while (true) {
        time_t currentTime = time(0);
        if (currentTime - startTime >= 30) break;

        string randomWord = words[rand() % 10];
        cout << "Word: " << randomWord << "\n> ";

        string userInput;
        cin >> userInput;

        if (userInput == randomWord) {
            correct++;
        }
        total++;
    }

    cout << "\nTime's up!\n";
    cout << "Total words: " << total << endl;
    cout << "Correct words: " << correct << endl;

    double wpm = correct * 2; // 30 seconds -> x2 to get per minute
    double accuracy = (total > 0) ? (100.0 * correct / total) : 0;

    cout << "WPM: " << wpm << endl;
    cout << "Accuracy: " << accuracy << "%" << endl;

    return 0;
}